<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="?attr/backgroundColorSecondary"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/CustomToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/arrow_back"
        app:navigationIconTint="?attr/textColorPrimary"
        app:title="@string/search"
        app:titleTextAppearance="@style/ToolbarTextAppearance" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="?attr/backgroundColorSecondary"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:backgroundTint="?attr/searchBarBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_background"
                android:orientation="horizontal"
                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search_icon"
                    app:tint="?attr/searchBarElementColor" />

                <EditText
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:hint="@string/search"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="@color/alternative_black"
                    android:textColorHint="?attr/searchBarElementColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:padding="0dp"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <ImageView
                android:id="@+id/clear_text"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/clear"
                android:visibility="gone"
                app:tint="?attr/searchBarElementColor" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/track_item">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/placeholderMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/placeholderImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="86dp" />

            <TextView
                android:id="@+id/placeholderText"
                style="@style/PlaceholderText" />

            <Button
                android:id="@+id/updateButton"
                style="@style/UpdateButton"
                android:text="@string/update"
                android:gravity=""/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>



