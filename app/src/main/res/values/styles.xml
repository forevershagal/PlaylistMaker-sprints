<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="cornerRadius">16sp</item>
        <item name="iconTintMode">multiply</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:paddingTop">4dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsSpaceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="tint">?attr/iconsTintColor</item>
    </style>

    <style name="TrackCellText">
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackCellText.TrackTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/trackTitle</item>
    </style>

    <style name="TrackCellText.Subtitle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/iconsTintColor</item>
    </style>
</resources>