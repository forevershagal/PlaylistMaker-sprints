<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="buttonTextColor">@color/alternative_black</item>
        <item name="backgroundColorPrimary">@color/background_blue</item>
        <item name="backgroundColorSecondary">@color/white</item>
        <item name="textColorPrimary">@color/alternative_black</item>
        <item name="iconsTintColor">@color/icon_gray</item>
        <item name="searchBarBackground">@color/search_bar_background</item>
        <item name="searchBarElementColor">@color/search_bar_text_color</item>
        <item name="trackTitle">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="updateButtonBackground">@color/alternative_black</item>
        <item name="updateButtonTextColor">@color/white</item>

        <item name="searchBarBackgroundColor">@color/search_bar_background_color_lite</item>
        <item name="PlaceholderTextColor">@color/alternative_black</item>

        <item name="ic_error_color">@color/alternative_black</item>
        <item name="ic_no_results_color">@color/alternative_black</item>

        <item name="TrackNameTextColor">@color/black</item>
    </style>
</resources>